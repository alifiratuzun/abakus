{% extends "layout.njk" %}

{% block content %}
  <main class="grid">
    {% for project in collections.project %}
      <a class="thumb" href="{{ project.url }}"
         data-what="{{ project.data.what | slug }}"
         data-who="{{ project.data.who | slug }}"
         data-where="{{ project.data.where | slug }}"
         data-when="{{ project.data.when | slug }}">
        <div class="thumb-img-wrapper">
          <img src="{{ project.data.images[0] }}" alt="{{ project.data.title }}">
        </div>
        <div class="thumb-text">
          <h2>{{ project.data.title }}</h2>
          {% if project.data.who %}<div class="thumb-who">{{ project.data.who }}</div>{% endif %}
          <p>
            {{ project.data.where or project.data.location }}<br>
            <span class="thumb-year">{{ project.data.when or project.data.year }}</span>
          </p>
        </div>
      </a>
    {% endfor %}
  </main>
{% endblock %}
